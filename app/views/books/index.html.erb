<h1>Books</h1>

<table>
<thead>
  <tr>
	<th>Title</th>
	<th>Body</th>
  </tr>
</thead>
<% @books.each do |book| %>
<tbody>
  <tr>
  	<td><%= book.title %></td>
  	<td><%= book.body %></td>
  	<td>Show</td>
  	<td>Edit</td>
  	<td>Destroy</td>
  </tr>
</tbody>
<% end %>
 </table>










<h1>New book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>