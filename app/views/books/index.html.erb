<% if flash[:bbb] %>
 <p class="ok"><%= flash[:bbb] %></p>
<% end %>
<h1 class="index-title">Books</h1>

<table>
<thead>
  <tr>
	<th>Title</th>
	<th>Body</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>
</thead>
<% @books.each do |book| %>
<tbody>
  <tr>
  	<td><%= book.title %></td>
  	<td><%= book.body %></td>
  	<td><%= link_to "Show",book_path(book.id) %></td>
  	<td><%= link_to "Edit",edit_book_path(book.id) %></td>
  	<td><%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
</tbody>
<% end %>
 </table>










<h1 class="index-title">New book</h1>
<% if @book.errors.any? %>
  <div class="error-box" id="error_explanation">
    <h2 class="error-title"><%= @book.errors.count %>erros prohibited this book from being saved:</h2>
 
    <ul class=error-text>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<%= form_for(@book) do |f| %>
<div class="new-box">
<%= f.label :title, "Title"%>
<%= f.text_field :title %>
</div>
<div class="new-box">
<%= f.label :body, "Body"%>
<%= f.text_area :body %>
</div>

<%= f.submit 'Create Book' %>
<% end %>