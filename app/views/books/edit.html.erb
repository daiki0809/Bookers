<h1 class="edit-title">Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error-box" id="error_explanation">
    <h2 class="error-title"><%= @book.errors.count %>erros prohibited this book from being saved:</h2>
 
    <ul class="error-text">
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
</div>

<%= form_for(@book) do |f| %>
<div class="edit-box">
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>
</div>
<div class="edit-box">
	<%= f.label :body, "Body" %>
	<%= f.text_area :body %>
</div>

	<%= f.submit 'Update Book' %>
<% end %>

<p class="edit-manu">
	<%= link_to"Show",book_path(@book) %> 
	| <%= link_to"Back", books_path %>
</p>